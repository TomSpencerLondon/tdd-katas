Object subclass: #Counter	instanceVariableNames: 'count'	classVariableNames: ''	package: 'MyCounter'!!Counter methodsFor: 'accessing' stamp: '11/16/2025 14:22'!count: anInteger 	count := anInteger! !!Counter methodsFor: 'accessing' stamp: '11/16/2025 14:23'!count	^ count! !!Counter methodsFor: 'accessing' stamp: '11/16/2025 14:28'!increment	count := count + 1! !!Counter methodsFor: 'API' stamp: '11/16/2025 14:30'!decrement	count := count - 1! !!Counter methodsFor: 'initialization' stamp: '11/16/2025 14:33'!initialize	super initialize.	count := 0! !TestCase subclass: #CounterTest	instanceVariableNames: ''	classVariableNames: ''	package: 'MyCounter'!!CounterTest methodsFor: 'tests' stamp: '11/16/2025 14:13'!testCountIsSetAndRead	| c |	c := Counter new.	c count: 7.	self assert: c count equals: 7! !!CounterTest methodsFor: 'tests' stamp: '11/16/2025 14:26'!testIncrement	| c |	c := Counter new.	c count: 0.	c increment.	self assert: c count equals: 1! !!CounterTest methodsFor: 'tests' stamp: '11/16/2025 14:29'!testDecrement	| c |	c := Counter new.	c count: 10.	c decrement.	self assert: c count equals: 9! !!CounterTest methodsFor: 'tests' stamp: '11/16/2025 14:32'!testCounterStartingAt0	| c |	c := Counter new.	self assert: c count equals: 0! !